generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  username     String         @unique
  email        String         @unique
  password     String
  isAdmin      Boolean        @default(false)
}

model Course {
  id           String         @id @default(cuid())
  name         String
  description  String
  price        Decimal
  image        String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime?      @updatedAt
  totalHours   Decimal
  promoCode    String?
}

model Video {
  id          String @id @default(cuid())
  name        String
  description String
  url         String
  courseId    String
}

model OwnedCourses {
  id       String @id @default(cuid())
  userId   String
  courseId String
}
